<h1>User info</h1>
<div class="text-danger">
<% if @user.errors.any? %>
  <span class="h4"><%= @user.errors.count %>error prohibited this obj from being saved:</span>
  <% @user.errors.full_messages.each do |message| %><br>
    ・<%= message %>
  <% end %>
<% end %>
</div>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %><br>
  <label for="inputImage">Image</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介分" %><br>
  <%= f.submit "Update User" %>
<% end %>